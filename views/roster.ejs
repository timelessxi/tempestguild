<div class="container">
    <h1 class="text-center my-4">Guild Roster</h1>

    <div class="row">
        <% characters.forEach(character => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= character.name %></h5>
                        <p class="card-text">
                            <strong>Class:</strong> <%= character.class %><br>
                            <strong>Level:</strong> <%= character.level %>
                        </p>
                        <% if (character.user_id) { %>
                            <!-- If character is claimed, link to user profile -->
                            <a href="/profile/<%= character.user_id %>" class="btn btn-info">View Profile</a>
                        <% } else { %>
                            <!-- If character is unclaimed, show claim button -->
                            <form action="/claim-character" method="POST" onsubmit="return confirm('Are you sure you want to claim this character?');">
                                <input type="hidden" name="characterId" value="<%= character.id %>">
                                <button type="submit" class="btn btn-primary">Claim</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
