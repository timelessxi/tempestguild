<div class="container">
    <h1 class="text-center my-4">Guild News</h1>

    <% newsArticles.forEach(article => { %>
    <div class="news-article mb-4">
        <h3><%= article.title %></h3>
        <small class="text-muted">Posted on <%= new Date(article.created_at).toLocaleDateString() %></small>
        <p><%= article.content %></p>
        <hr>
    </div>
    <% }) %>
</div>
